    "from flask import Flask, render_template, request, url_for, redirect\n",
    "from vid_nlu import Video\n",
    "from final_result import Email\n",
    "from random import randint\n",
    "import base64\n",
    "import ibm_db\n",
    "conn = ibm_db.connect(\"""Credentials of your DB2"""\", \"\", \"\")\n",
    "\n",
    "app = Flask(__name__)\n",
    "\n",
    "@app.route(\"/\", methods = [\"GET\",\"POST\"])\n",
    "def login():\n",
    "    error = ''\n",
    "    try:\n",
    "        if request.method == \"POST\":\n",
    "            attempted_username = request.form['username']\n",
    "            attempted_password = request.form['password']\n",
    "            \n",
    "            query = \"SELECT EXISTS(SELECT * FROM SCORE WHERE EMAIL = '\" + str(attempted_username) + \"') FROM SCORE\"\n",
    "            stmt = ibm_db.exec_immediate(conn, query)\n",
    "            result = ibm_db.fetch_assoc(stmt)\n",
    "            if result['1'] == 0:\n",
    "                query = \"SELECT UID,PASSWORD FROM LOGIN WHERE EMAIL = '\"+str(attempted_username)+\"'\"\n",
    "                stmt = ibm_db.exec_immediate(conn, query)\n",
    "                dictionary = ibm_db.fetch_assoc(stmt)\n",
    "                uid = str(base64.b64encode(bytes(dictionary['UID'], 'utf-8')))[2:-1]\n",
    "                if attempted_password == dictionary['PASSWORD']:\n",
    "                    return redirect(url_for('workflow',uid=uid))\n",
    "                else:\n",
    "                    error = \"Invalid credentials. Try again.\"\n",
    "                    return render_template('login.html', error = error)\n",
    "                    \n",
    "            elif result['1'] == 1:\n",
    "                error = \"Only 1 attempt possible\"\n",
    "                return render_template('login.html', error=error)\n",
    "                    \n",
    "        elif request.method ==\"GET\":\n",
    "            return render_template('login.html', error=error)\n",
    "        \n",
    "    except Exception as e:\n",
    "        return render_template('login.html', error = error)\n",
    "    \n",
    "\n",
    "@app.route(\"/signup\", methods = [\"GET\",\"POST\"])\n",
    "def signup():\n",
    "    error = ''\n",
    "    try:\n",
    "        if request.method == \"POST\":\n",
    "            f_name = request.form['firstname']\n",
    "            m_name = request.form['middlename']\n",
    "            l_name = request.form['lastname']\n",
    "            username = request.form['username']\n",
    "            password = request.form['password']\n",
    "            \n",
    "            while True:\n",
    "                uid = f_name[0].lower()+m_name[0].lower()+l_name[0].lower()+str(randint(1000000,9999999))\n",
    "                query = \"SELECT EXISTS(SELECT UID FROM SCORE WHERE EMAIL = '\" + str(username) + \"') FROM LOGIN\"\n",
    "                stmt = ibm_db.exec_immediate(conn, query)\n",
    "                dictionary = ibm_db.fetch_assoc(stmt)\n",
    "                if dictionary['1'] == 0:\n",
    "                    query = \"INSERT INTO LOGIN(UID,F_NAME,M_NAME,L_NAME,EMAIL,PASSWORD) VALUES('\"+uid+\"','\"+f_name+\"','\"+m_name+\"','\"+l_name+\"','\"+username+\"','\"+password+\"')\"\n",
    "                    ibm_db.exec_immediate(conn, query)\n",
    "                    break\n",
    "        \n",
    "        elif request.method == \"GET\":\n",
    "            return render_template(\"signup.html\")\n",
    "            \n",
    "        return redirect(url_for('login'))\n",
    "    except Exception as e:\n",
    "        return render_template('signup.html', error = error)\n",
    "\n",
    "    \n",
    "@app.route(\"/dashboard/<uid>\", methods = [\"GET\",\"POST\"])\n",
    "def dashboard(uid):\n",
    "    try:\n",
    "        if request.method == \"POST\":\n",
    "            temp = str(base64.b64decode(uid))[2:-1]\n",
    "            email = Email(temp)\n",
    "            email.send_mail()\n",
    "            return render_template(\"dashboard.html\",uid=uid)\n",
    "        \n",
    "        elif request.method == \"GET\":\n",
    "            return render_template(\"dashboard.html\",uid=uid)\n",
    "        \n",
    "    except:\n",
    "        return render_template(\"dashboard.html\",uid=uid)\n",
    "    \n",
    "@app.route(\"/about/<uid>\", methods = [\"GET\",\"POST\"])\n",
    "def about(uid):\n",
    "    return render_template(\"about.html\",uid=uid)\n",
    "\n",
    "@app.route(\"/workflow/<uid>\",methods=[\"GET\",\"POST\"])\n",
    "def workflow(uid):\n",
    "    try:\n",
    "        if request.method == \"POST\":\n",
    "            return redirect(url_for('dashboard',uid=uid))\n",
    "        elif request.method == \"GET\":\n",
    "            return render_template(\"workflow.html\",uid=uid)\n",
    "    except:\n",
    "        return render_template(\"workflow.html\",uid=uid)\n",
    "    \n",
    "@app.route(\"/resume/<uid>\", methods = [\"GET\",\"POST\"])\n",
    "def resume(uid):\n",
    "    error = ''\n",
    "    temp = str(base64.b64decode(uid))[2:-1]\n",
    "    try:\n",
    "        if request.method == \"POST\":\n",
    "            post = request.form['post']\n",
    "            url = request.form['link']\n",
    "            \n",
    "            query = \"SELECT EMAIL FROM LOGIN WHERE UID='\"+str(temp)+\"'\"\n",
    "            stmt = ibm_db.exec_immediate(conn, query)\n",
    "            email = ibm_db.fetch_assoc(stmt)['EMAIL']\n",
    "                \n",
    "            query = \"SELECT EXISTS(SELECT EMAIL FROM SCORE WHERE EMAIL = '\"+str(email)+\"') FROM SCORE\"\n",
    "            stmt = ibm_db.exec_immediate(conn, query)\n",
    "            result = ibm_db.fetch_assoc(stmt)\n",
    "                        \n",
    "            video=Video(url,post)\n",
    "            score=video.fit()\n",
    "            if result['1'] == 0:\n",
    "                \n",
    "                if score >= 0.05:\n",
    "                    if post == 'Data Scientist':\n",
    "                        post = 'ds'\n",
    "                    elif post == 'Web Developer':\n",
    "                        post = 'wd'\n",
    "                    elif post == 'Android Developer':\n",
    "                        post = 'ad'\n",
    "                        \n",
    "                    query = \"INSERT INTO SCORE(EMAIL,POINTS,POST,RESUME,INITIALISED) VALUES('\" + str(email) + \"',1,'\"+str(post)+\"',1,0)\"\n",
    "                    stmt = ibm_db.exec_immediate(conn, query)\n",
    "                    \n",
    "                else:\n",
    "                    query = \"INSERT INTO SCORE(EMAIL,POINTS,POST,RESUME,INITIALISED) VALUES('\" + str(email) + \"',0,'\"+str(post)+\"',1,0)\"\n",
    "                    stmt = ibm_db.exec_immediate(conn, query)\n",
    "                    \n",
    "            elif result['1'] == 1:\n",
    "                \n",
    "                query = \"SELECT RESUME FROM SCORE WHERE EMAIL = '\"+str(email)+\"'\"\n",
    "                stmt = ibm_db.exec_immediate(conn, query)\n",
    "                result = ibm_db.fetch_assoc(stmt)\n",
    "                \n",
    "                if result['RESUME'] == 0:\n",
    "                    \n",
    "                    if score >= 0.05:\n",
    "                        query = \"UPDATE SCORE SET POINTS = (SELECT POINTS FROM SCORE WHERE EMAIL = '\" +str(email) +\"') + 1,RESUME = 1 WHERE EMAIL = '\"+str(email) + \"'\"\n",
    "                        stmt = ibm_db.exec_immediate(conn, query)\n",
    "\n",
    "                    else:\n",
    "                        query = \"UPDATE SCORE RESUME = 1 WHERE EMAIL = '\"+str(email) + \"'\"\n",
    "                        stmt = ibm_db.exec_immediate(conn, query)\n",
    "                        \n",
    "                elif result['RESUME'] == 1:\n",
    "                    return render_template(\"dashboard.html\", uid=uid)\n",
    "\n",
    "        elif request.method == \"GET\":\n",
    "            return render_template(\"resume.html\",uid=uid)\n",
    "        \n",
    "        return render_template(\"dashboard.html\", uid=uid)\n",
    "        \n",
    "    except Exception as e:\n",
    "        print(\"error\")\n",
    "        return render_template('resume.html', uid=uid)\n",
    "\n",
    "app.run(debug=True, use_reloader = False)"
   ]
  },
